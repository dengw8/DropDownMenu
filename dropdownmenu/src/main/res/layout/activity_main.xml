<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dropdownmenu.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/menu1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignTop="@id/buttom" />

    <ImageButton
        android:id="@+id/fixedButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/menu2"
        android:layout_margin="5dp"
        android:background="@drawable/circle_background_for_image_button"
        android:src="@drawable/ic_keyboard_return_grey_500_24dp" />

    <LinearLayout
        android:id="@+id/buttom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="end">

        <ImageView
            android:id="@+id/switcher"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:src="@drawable/ic_group_work_red_700_24dp" />
    </LinearLayout>

</RelativeLayout>
